mixin news-min(title, text, img_src, img_mobile, img_alt, date_val, date)
  a(href="#!").grid-item.news-min
    .news-min__description
      .title-3=title
      .news-min__text=text
    .news-min__box
      .news-min__img-box
        picture.img.news-min__img
          source(srcset=img_mobile media="(max-width: 500px)" type="image/jpg")
          img(src=img_src, alt=img_alt)
      time(datetime=date_val).news-min__date=date
